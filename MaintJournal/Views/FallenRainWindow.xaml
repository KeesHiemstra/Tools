<Window
  x:Class="MaintJournal.Views.FallenRainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MaintJournal.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Fallen rain"
  Width="250"
  Height="315"
  mc:Ignorable="d">
  <Grid>
    <DataGrid Name="FallenRainDataGrid"
 		          AlternatingRowBackground="#FFEEEEEE"
		          AutoGenerateColumns="True"
              AutoGeneratedColumns="FallenRainDataGrid_AutoGeneratedColumns"
		          CanUserAddRows="False"
		          CanUserDeleteRows="False"
		          FrozenColumnCount="1"
		          IsReadOnly="True">
      
      <DataGrid.CellStyle>
        <Style TargetType="{x:Type DataGridCell}">
          <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
      </DataGrid.CellStyle>
    </DataGrid>
  </Grid>
</Window>
